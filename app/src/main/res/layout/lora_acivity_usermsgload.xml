<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="小区ID"/>

            <EditText
                android:id="@+id/UserMsgLoadActivity_et_xqId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="小区ID"
                android:inputType="number"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="采集机Id"/>

            <EditText
                android:id="@+id/UserMsgLoadActivity_et_cjjID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="采集机Id"
                android:inputType="number"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="表频率"/>

            <EditText
                android:id="@+id/UserMsgLoadActivity_et_meterFreq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="表频率"
                android:inputType="number"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="户号"/>

            <EditText
                android:id="@+id/UserMsgLoadActivity_et_userAddr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="户号"
                android:inputType="text"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="表初值"/>

            <EditText
                android:id="@+id/UserMsgLoadActivity_et_bds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="表初值"
                android:inputType="numberDecimal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="表序号"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/UserMsgLoadActivity_et_meterNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="表序号"
                    android:inputType="number"/>

                <Button
                    android:id="@+id/UserMsgLoadActivity_btn_numberLoad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="扫描"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="表ID"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/UserMsgLoadActivity_et_meterId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="表ID"
                    android:inputType="number"/>

                <Button
                    android:id="@+id/UserMsgLoadActivity_btn_idLoad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="扫描"/>
            </LinearLayout>


            <CheckBox
                android:id="@+id/UserMsgLoadActivity_cb_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="表序号丢失"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/UserMsgLoadActivity_btn_setBds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="设置表底度"/>

                <Button
                    android:id="@+id/UserMsgLoadActivity_btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="保存"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
