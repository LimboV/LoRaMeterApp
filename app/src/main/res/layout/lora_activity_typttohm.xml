<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/khaki"
                android:lineSpacingExtra="10dp"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   目标节点ID   "
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/LoRa_TYPTtoHmActivity_et_aimJDID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:background="@drawable/edit_bg"
                        android:gravity="center"
                        android:hint="目标节点ID"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   目标网络ID   "
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/LoRa_TYPtoHmActivity_et_aimNetID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:gravity="center"
                        android:hint="目标网络ID"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   目标网络频率(KHz)   "
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/LoRa_TYPTtoHmActivity_et_aimNetFreq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:gravity="center"
                        android:hint="目标网络频率(KHz)"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_dis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   目标路由路径   "
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/LoRa_TYPTtoHmActivity_et_aimLYLJ1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:gravity="center"
                        android:hint="一层路径"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>

                    <EditText
                        android:id="@+id/LoRa_TYPTtoHmActivity_et_aimLYLJ2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:gravity="center"
                        android:hint="二层路径"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>

                    <EditText
                        android:id="@+id/LoRa_TYPTtoHmActivity_et_aimLYLJ3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:gravity="center"
                        android:hint="三层路径"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/skyblue"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   末端信号   "
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/LoRa_TYPTtoHmActivity_et_endSingal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="末端信号"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_dis2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   路由信号   "
                        android:textColor="@color/black"/>


                    <EditText
                        android:id="@+id/LoRa_TYPTtoHmActivity_et_LYSignal1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="1层"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>

                    <EditText
                        android:id="@+id/LoRa_TYPTtoHmActivity_et_LYSignal2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="2层"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>

                    <EditText
                        android:id="@+id/LoRa_TYPTtoHmActivity_et_LYSignal3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="3层"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   电池电压   "
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/LoRa_TYPTtoHmActivity_et_electric"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="电池电压"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="   表数据   "
                                android:textColor="@color/black"/>

                            <EditText
                                android:id="@+id/LoRa_TYPTtoHmActivity_et_data"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/edit_bg"
                                android:focusable="false"
                                android:gravity="center"
                                android:hint="表数据"
                                android:textColor="@color/black"
                                android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                                android:textCursorDrawable="@drawable/color_cursor"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="   表状态   "
                                android:textColor="@color/black"/>

                            <EditText
                                android:id="@+id/LoRa_TYPTtoHmActivity_et_state"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/edit_bg"
                                android:focusable="false"
                                android:gravity="center"
                                android:hint="表状态"
                                android:textColor="@color/black"
                                android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                                android:textCursorDrawable="@drawable/color_cursor"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/khaki"
                android:lineSpacingExtra="10dp"
                android:orientation="vertical"
                android:padding="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   分采号   "
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/LoRa_TYPTtoHmActivity_et_fcNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:gravity="center"
                        android:hint="分采号"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>
                    <Button
                        android:id="@+id/btn_get1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="读取"/>
                    <Button
                        android:id="@+id/btn_write1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="写入"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   水表总数   "
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/LoRa_TYPTtoHmActivity_et_meterCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:gravity="center"
                        android:hint="水表总数"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>

                    <Button
                        android:id="@+id/btn_get2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="读取"/>
                    <Button
                        android:id="@+id/btn_write2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="写入"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="   表序号   "
                                android:textColor="@color/black"/>

                            <EditText
                                android:inputType="number"
                                android:id="@+id/LoRa_TYPTtoHmActivity_et_meterNum2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/edit_bg"
                                android:gravity="center"
                                android:hint="表序号"
                                android:textColor="@color/black"
                                android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                                android:textCursorDrawable="@drawable/color_cursor"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="   表地址   "
                                android:textColor="@color/black"/>

                            <EditText
                                android:id="@+id/LoRa_TYPTtoHmActivity_et_meterAddr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/edit_bg"
                                android:gravity="center"
                                android:hint="表地址"
                                android:textColor="@color/black"
                                android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                                android:textCursorDrawable="@drawable/color_cursor"/>
                        </LinearLayout>
                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_addSingleMeterMsg"
                        android:text="添加单个\n表计档案"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   表序号   "
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/LoRa_TYPTtoHmActivity_et_meterNum3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:background="@drawable/edit_bg"
                        android:gravity="center"
                        android:hint="表序号"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>
                    <Button
                        android:id="@+id/btn_deleteSingleMeterMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="删除单个表计档案"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   表序号   "
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/LoRa_TYPTtoHmActivity_et_meterNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:gravity="center"
                        android:hint="表序号"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>
                    <Button
                        android:id="@+id/btn_getMeterData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="实时点抄"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   表序号   "
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/LoRa_TYPTtoHmActivity_et_meterNum1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:background="@drawable/edit_bg"
                        android:gravity="center"
                        android:hint="表序号"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   底度   "
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/LoRa_TYPTtoHmActivity_et_meterValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:gravity="center"
                        android:hint="底度"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>

                    <Button
                        android:id="@+id/btn_setMeterValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="写入底度"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_freezeALLFcMsg"
                    android:layout_weight="1"
                    android:text="冻结分采所有数据"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btn_getALLFcMsg"
                    android:layout_weight="1"
                    android:text="提取分采所有数据"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/khaki"
                android:lineSpacingExtra="10dp"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">


                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/btn_importMeterMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="导入水表档案"/>
            <Button
                android:id="@+id/btn_exportMeterMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="导出水表档案"/>
            <Button
                android:id="@+id/btn_clearAllMeterMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="清空节点所有表计档案"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_reset1"
                    android:text="复位界面"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btn_reset2"
                    android:text="复位转换器"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
