<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tv_msg"/>
    <EditText
        android:id="@+id/et_jbid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="基表ID"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:id="@+id/et_lylj1"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="一级路由路径"/>
        <EditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:id="@+id/et_lylj2"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="二级路由路径"/>
        <EditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:id="@+id/et_lylj3"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="三级路由路径"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_getPic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取图片"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


            <ImageView
                android:id="@+id/cjjib_08"
                android:layout_width="50dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:scaleType="fitCenter">
            </ImageView>

            <ImageView
                android:id="@+id/cjjib_07"
                android:layout_width="50dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:scaleType="fitCenter">
            </ImageView>

            <ImageView
                android:id="@+id/cjjib_06"
                android:layout_width="50dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:scaleType="fitCenter">
            </ImageView>

            <ImageView
                android:id="@+id/cjjib_05"
                android:layout_width="50dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:scaleType="fitCenter">
            </ImageView>

            <ImageView
                android:id="@+id/cjjib_04"
                android:layout_width="50dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:scaleType="fitCenter">
            </ImageView>

            <ImageView
                android:id="@+id/cjjib_03"
                android:layout_width="50dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:scaleType="fitCenter">
            </ImageView>

            <ImageView
                android:id="@+id/cjjib_02"
                android:layout_width="50dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:scaleType="fitCenter">
            </ImageView>

            <ImageView
                android:id="@+id/cjjib_01"
                android:layout_width="50dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:scaleType="fitCenter">
            </ImageView>
        </LinearLayout>
</LinearLayout>
