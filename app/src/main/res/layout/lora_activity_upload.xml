<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/UploadActivity_tv_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="当前版本号:"/>

            <TextView
                android:id="@+id/UploadActivity_tv_xqNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="小区编号:"/>

            <TextView
                android:id="@+id/UploadActivity_tv_cjjNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="采集机编号:"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/UploadActivity_tv_file"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:text="升级文件请置于SeckUpdate文件夹中"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/UploadActivity_btn_chooseFile"
                    android:layout_weight="3"
                    android:text="读取"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:id="@+id/UploadActivity_btn_sureUpload"
                    android:text="升级"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/UploadActivity_tv_uploadMsg"
                android:text="升级信息:\n"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
