<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include
            android:id="@+id/sxb_lazy_set_header"
            layout="@layout/sxbsetheader" />

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="54dp"
                        android:background="#ffffffff"
                        android:padding="3dp" >

                        <ImageView
                            android:id="@+id/ib_08"
                            android:layout_width="34dp"
                            android:layout_height="48dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ib_center_bg"
                            android:scaleType="fitXY"
                            android:src="@drawable/meter_box" >
                        </ImageView>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="6dp"
                            android:background="#e0aa0000" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="48dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="6dp"
                            android:background="#e0aa0000" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="54dp"
                        android:background="#ffffffff"
                        android:padding="3dp">

                        <ImageView
                            android:id="@+id/ib_07"
                            android:layout_width="34dp"
                            android:layout_height="48dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ib_center_bg"
                            android:scaleType="fitXY"
                            android:src="@drawable/meter_box">
                        </ImageView>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="6dp"
                            android:background="#e0aa0000"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="48dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="6dp"
                            android:background="#e0aa0000"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="54dp"
                        android:background="#ffffffff"
                        android:padding="3dp" >

                        <ImageView
                            android:id="@+id/ib_06"
                            android:layout_width="34dp"
                            android:layout_height="48dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ib_center_bg"
                            android:scaleType="fitXY"
                            android:src="@drawable/meter_box" >
                        </ImageView>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="6dp"
                            android:background="#e0aa0000" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="48dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="6dp"
                            android:background="#e0aa0000" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="54dp"
                        android:background="#ffffffff"
                        android:padding="3dp" >

                        <ImageView
                            android:id="@+id/ib_05"
                            android:layout_width="34dp"
                            android:layout_height="48dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ib_center_bg"
                            android:scaleType="fitXY"
                            android:src="@drawable/meter_box" >
                        </ImageView>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="6dp"
                            android:background="#e0aa0000" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="48dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="6dp"
                            android:background="#e0aa0000" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="54dp"
                        android:background="#ffffffff"
                        android:padding="3dp" >

                        <ImageView
                            android:id="@+id/ib_04"
                            android:layout_width="34dp"
                            android:layout_height="48dp"
                            android:background="@drawable/ib_center_bg"
                            android:scaleType="fitXY"
                            android:src="@drawable/meter_box"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true">
                        </ImageView>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="6dp"
                            android:background="#e0aa0000" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="48dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="6dp"
                            android:background="#e0aa0000" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="54dp"
                        android:background="#ffffffff"
                        android:padding="3dp" >

                        <ImageView
                            android:id="@+id/ib_03"
                            android:layout_width="34dp"
                            android:layout_height="48dp"
                            android:background="@drawable/ib_center_bg"
                            android:scaleType="fitXY"
                            android:src="@drawable/meter_box"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true">
                        </ImageView>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="6dp"
                            android:background="#e0aa0000" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="48dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="6dp"
                            android:background="#e0aa0000" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="54dp"
                        android:background="#ffffffff"
                        android:padding="3dp" >

                        <ImageView
                            android:id="@+id/ib_02"
                            android:layout_width="34dp"
                            android:layout_height="48dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ib_center_bg"
                            android:scaleType="fitXY"
                            android:src="@drawable/meter_box" >
                        </ImageView>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="6dp"
                            android:background="#e0aa0000" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="48dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="6dp"
                            android:background="#e0aa0000" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="54dp"
                        android:background="#ffffffff"
                        android:padding="3dp" >

                        <ImageView
                            android:id="@+id/ib_01"
                            android:layout_width="34dp"
                            android:layout_height="48dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ib_center_bg"
                            android:scaleType="fitXY"
                            android:src="@drawable/meter_box" >
                        </ImageView>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="6dp"
                            android:background="#e0aa0000" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="48dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="6dp"
                            android:background="#e0aa0000" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/shift_08"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="#ff1883c9"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/shift_07"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="#ff1883c9"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/shift_06"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="#ff1883c9"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/shift_05"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="#ff1883c9"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/shift_04"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="#ff1883c9"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/shift_03"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="#ff1883c9"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/shift_02"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="#ff1883c9"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/shift_01"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="#ff1883c9"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/read_pic_btn"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:onClick="showAllPic"
            android:text="显示所有字符"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/x_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="X坐标: "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/y_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Y坐标: "
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="230dp" >

            <ImageButton
                android:id="@+id/up_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:src="@drawable/arrow_up" />

            <ImageButton
                android:id="@+id/down_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"
                android:src="@drawable/arrow_down" />

            <ImageButton
                android:id="@+id/left_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32dp"
                android:src="@drawable/arrow_left" />

            <ImageButton
                android:id="@+id/right_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="32dp"
                android:src="@drawable/arrow_right" />

            <RelativeLayout
                android:id="@+id/ib_layout"
                android:layout_width="40dp"
                android:layout_height="54dp"
                android:layout_centerInParent="true"
                android:background="#ffffffff"
                android:padding="3dp" >

                <ImageView
                    android:id="@+id/ib_center"
                    android:layout_width="34dp"
                    android:layout_height="48dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ib_center_bg"
                    android:scaleType="matrix"
                    android:src="@drawable/meter_box" >
                </ImageView>

                <View
                    android:layout_width="1dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="6dp"
                    android:background="#e0aa0000" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="6dp"
                    android:background="#e0aa0000" />
            </RelativeLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/write_param_btn"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:onClick="writeCoorXY"
            android:text="写入坐标"
            android:textSize="18sp" />
    </LinearLayout>

</ScrollView>