<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/pic_menu"
              android:orientation="vertical">

    <TextView
        android:layout_weight="3"
        android:id="@+id/SxbGetDataActivity_tv_showMsg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入表地址"
            android:id="@+id/SxbGetDataActivity_et_meterAddr"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入表频率"
            android:id="@+id/SxbGetDataActivity_et_freq"/>
        <Button
            android:id="@+id/SxbGetDataActivity_btn_getData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="读取数据"/>
    </LinearLayout>

</LinearLayout>
