<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/khaki"
                android:lineSpacingExtra="10dp"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   目标节点ID   "
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/LoRa_LoRa_TYPTJd_Pulse_et_aimJDID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:gravity="center"
                        android:hint="目标节点ID"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   目标网络ID   "
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/LoRa_LoRa_TYPTJd_Pulse_et_aimNetID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:gravity="center"
                        android:hint="目标网络ID"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   目标网络频率(KHz)   "
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/LoRa_LoRa_TYPTJd_Pulse_et_aimNetFreq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:gravity="center"
                        android:hint="目标网络频率(KHz)"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   目标路由路径   "
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/LoRa_LoRa_TYPTJd_Pulse_et_aimLYLJ1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:gravity="center"
                        android:hint="一层路径"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>

                    <EditText
                        android:id="@+id/LoRa_LoRa_TYPTJd_Pulse_et_aimLYLJ2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:gravity="center"
                        android:hint="二层路径"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>

                    <EditText
                        android:id="@+id/LoRa_LoRa_TYPTJd_Pulse_et_aimLYLJ3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:gravity="center"
                        android:hint="三层路径"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/skyblue"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   末端强度   "
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/LoRa_LoRa_TYPTJd_Pulse_et_endSingal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="末端强度"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   电池电压   "
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/LoRa_LoRa_TYPTJd_Pulse_et_electricVoltage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="电池电压"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   路由信号   "
                        android:textColor="@color/black"/>


                    <EditText
                        android:id="@+id/LoRa_LoRa_TYPTJd_Pulse_et_LYSignal1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="1层"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>

                    <EditText
                        android:id="@+id/LoRa_LoRa_TYPTJd_Pulse_et_LYSignal2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="2层"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>

                    <EditText
                        android:id="@+id/LoRa_LoRa_TYPTJd_Pulse_et_LYSignal3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="3层"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="   数据   "
                                android:textColor="@color/black"/>

                            <EditText
                                android:id="@+id/LoRa_LoRa_TYPTJd_Pulse_et_data"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/edit_bg"
                                android:focusable="false"
                                android:gravity="center"
                                android:hint="数据"
                                android:textColor="@color/black"
                                android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                                android:textCursorDrawable="@drawable/color_cursor"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="   状态   "
                                android:textColor="@color/black"/>

                            <EditText
                                android:id="@+id/LoRa_LoRa_TYPTJd_Pulse_et_state"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/edit_bg"
                                android:focusable="false"
                                android:gravity="center"
                                android:hint="状态"
                                android:textColor="@color/black"
                                android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                                android:textCursorDrawable="@drawable/color_cursor"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="   阀控   "
                                android:textColor="@color/black"/>

                            <EditText
                                android:id="@+id/LoRa_LoRa_TYPTJd_Pulse_et_valveCtrl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/edit_bg"
                                android:focusable="false"
                                android:gravity="center"
                                android:hint="阀控"
                                android:textColor="@color/black"
                                android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                                android:textCursorDrawable="@drawable/color_cursor"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/LoRa_LoRa_TYPTJd_Pulse_btn_rtcData"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="实时\n点抄"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/khaki"
                android:lineSpacingExtra="10dp"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   表底度   "
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/LoRa_LoRa_TYPTJd_Pulse_et_meterInitData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:gravity="center"
                        android:hint="表底度"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>

                    <Button
                        android:id="@+id/btn_read1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="读取"/>

                    <Button
                        android:id="@+id/btn_set1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   表精度   "
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/LoRa_LoRa_TYPTJd_Pulse_et_meterJD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:gravity="center"
                        android:hint="表精度"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>

                    <Button
                        android:id="@+id/btn_read2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="读取"/>

                    <Button
                        android:id="@+id/btn_set2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   表脉冲数   "
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/LoRa_LoRa_TYPTJd_Pulse_et_meterPulseCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edit_bg"
                        android:gravity="center"
                        android:hint="表脉冲数"
                        android:textColor="@color/black"
                        android:textColorHint="@color/common_signin_btn_dark_text_disabled"
                        android:textCursorDrawable="@drawable/color_cursor"/>

                    <Button
                        android:id="@+id/btn_read3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="读取"/>

                    <Button
                        android:id="@+id/btn_set3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_reset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="复位界面"/>

                <Button
                    android:id="@+id/btn_resetChanger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="复位转换器"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
