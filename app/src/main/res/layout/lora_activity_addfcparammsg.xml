<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="分采名"/>
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/Lora_AddFcParamMsgActivity_et_fcName"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="分采号"/>
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/Lora_AddFcParamMsgActivity_et_fcId"
                android:inputType="number"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="分采频率"/>
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/Lora_AddFcParamMsgActivity_et_fcFreq"
                android:inputType="number"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="分采序号"/>
            <EditText
                android:layout_width="match_parent"
                android:inputType="number"
                android:id="@+id/Lora_AddFcParamMsgActivity_et_fcNum"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/Lora_AddFcParamMsgActivity_btn_save"
                android:text="存入数据库"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>