<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/pic_menu"
              android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入网络id:"/>

                <EditText
                    android:id="@+id/Meter485TestActivity_et_netid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入网络id"
                    android:singleLine="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入模块id:"/>

                <EditText
                    android:id="@+id/Meter485TestActivity_et_mkid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入模块id"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入频率:(MHZ)"/>

                <EditText
                    android:id="@+id/Meter485TestActivity_et_freq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入频率"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入分采号:"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/Meter485TestActivity_et_fc0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="请输入分采号"
                        android:singleLine="true"/>

                    <EditText
                        android:id="@+id/Meter485TestActivity_et_fc1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="请输入分采号"
                        android:singleLine="true"/>

                    <EditText
                        android:id="@+id/Meter485TestActivity_et_fc2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="请输入分采号"
                        android:singleLine="true"/>

                    <EditText
                        android:id="@+id/Meter485TestActivity_et_fc3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="请输入分采号"
                        android:singleLine="true"/>

                    <EditText
                        android:id="@+id/Meter485TestActivity_et_fc4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="请输入分采号"
                        android:singleLine="true"/>
                </LinearLayout>


                <Button
                    android:id="@+id/Meter485TestActivity_btn_getData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="读取数据"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <TextView
                android:id="@+id/Meter485TestActivity_tv_showMsg"
                android:text="接收数据:\n"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>