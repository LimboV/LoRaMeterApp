<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/pic_menu"
              android:orientation="vertical">

    <TextView
        android:id="@+id/GetDataActivity_tv_showMsg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <EditText
            android:id="@+id/GetDataActivity_et_meterAddr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入节点序号"
            android:inputType="number"/>

        <EditText
            android:id="@+id/GetDataActivity_et_freq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入表频率"
            android:inputType="number"/>

        <EditText
            android:id="@+id/GetDataActivity_et_netId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入网络ID"
            android:inputType="number"/>

        <EditText
            android:id="@+id/GetDataActivity_et_jd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="节点"
            android:inputType="number"/>

        <Button
            android:id="@+id/GetDataActivity_btn_getData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="读取数据"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="阀控指令:"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/GetDataActivity_btn_zt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="状态"/>

            <Button
                android:id="@+id/GetDataActivity_btn_bkf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="半开阀"/>

            <Button
                android:id="@+id/GetDataActivity_btn_gf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关阀"/>

            <Button
                android:id="@+id/GetDataActivity_btn_kf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="开阀"/>

            <Button
                android:id="@+id/GetDataActivity_btn_fx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="防锈"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
