<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="旧模块序号"/>

            <EditText
                android:id="@+id/LoRa_ReplaceSingleData_et_jmkxh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="旧模块序号"
                android:inputType="number"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="新模块序号"/>

            <EditText
                android:id="@+id/LoRa_ReplaceSingleData_et_xmkxh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="新模块序号"
                android:inputType="number"/>

            <Button
                android:id="@+id/LoRa_ReplaceSingleData_btn_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="替换单个模块序号信息"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="旧基表ID"/>

            <EditText
                android:id="@+id/LoRa_ReplaceSingleData_et_jjbid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="旧基表ID"
                android:inputType="number"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="新基表ID"/>

            <EditText
                android:id="@+id/LoRa_ReplaceSingleData_et_xjbid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="新基表ID"
                android:inputType="number"/>

            <Button
                android:id="@+id/LoRa_ReplaceSingleData_btn_enter1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="替换单个基表ID信息"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
