<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <com.seck.hzy.lorameterapp.LoRaApp.barcode.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="100dp"
            android:text="请扫描二维码"
            android:textColor="#d78816"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_light_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="400dp"
            android:background="@mipmap/torch_off" />

        <ImageView
            android:visibility="invisible"
            android:id="@+id/btn_cancel_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp"
            android:src="@mipmap/btn_camera_cancel_scan" />

        <ImageView
            android:id="@+id/iv_camera_diy_corner"
            android:layout_width="481px"
            android:layout_height="479px"
            android:background="@mipmap/bar_code_four_corner"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <ProgressBar
            android:id="@+id/pg_camera_diy"
            android:layout_width="450px"
            android:layout_height="450px"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progressbar"
            android:layout_alignTop="@+id/iv_camera_diy_corner"
            android:layout_alignLeft="@+id/iv_camera_diy_corner"
            android:layout_alignStart="@+id/iv_camera_diy_corner"
            android:layout_alignBottom="@+id/iv_camera_diy_corner"
            android:layout_alignRight="@+id/iv_camera_diy_corner"
            android:layout_alignEnd="@+id/iv_camera_diy_corner"/>

        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_camera_diy"
            android:layout_width="470px"
            android:layout_height="470px"
            android:background="@mipmap/bar_code_round_grey"
            android:layout_alignBottom="@+id/iv_camera_diy_corner"
            android:layout_alignRight="@+id/iv_camera_diy_corner"
            android:layout_alignEnd="@+id/iv_camera_diy_corner"/>

        <ImageView
            android:id="@+id/iv_camera_diy_circle"
            android:layout_width="480px"
            android:layout_height="480px"
            android:background="@mipmap/bar_code_center"
            android:layout_alignLeft="@+id/iv_camera_diy_corner"
            android:layout_alignStart="@+id/iv_camera_diy_corner"
            android:layout_alignBottom="@+id/iv_camera_diy"
            android:layout_alignTop="@+id/iv_camera_diy_corner"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="fill_parent"
        android:layout_height="65dip"
        android:background="@mipmap/navigation_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:background="@mipmap/btn_back"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:singleLine="true"
            android:textSize="20sp"
            android:text="扫描二维码"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/btn_map_bg"
            android:textColor="@android:color/white"
            android:visibility="invisible" />
    </LinearLayout>

</FrameLayout>