<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content" android:weightSum="4">
		<TextView android:text="水表编号" android:layout_width="0dp" android:layout_weight="2"
			android:layout_height="wrap_content" 
			android:background="#44443A" 
			android:textColor="#000000" 
			android:gravity="center_horizontal" android:textSize="15sp"/>
		<TextView android:text="本次抄见" android:layout_width="0dp" android:layout_weight="1"
			android:layout_height="wrap_content" 
			android:background="#44443A" 
			android:textColor="#000000" 
			android:gravity="center_horizontal" android:textSize="15sp"/>
		<TextView android:text="水表状态" android:layout_width="0dp" android:layout_weight="1"
			android:layout_height="wrap_content" 
			android:background="#44443A" 
			android:textColor="#000000" 
			android:gravity="center_horizontal" android:textSize="15sp"/>
	</LinearLayout>	      
	<LinearLayout
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="match_parent"
			android:layout_weight="1"
			android:layout_height="wrap_content"/>
		<Button
			android:layout_width="match_parent"
			android:layout_weight="1"
			android:text="抄写全部"
			android:id="@+id/btnCXQB"
			android:layout_height="wrap_content"/>
		<Button
			android:layout_weight="1"
			android:id="@+id/btnMenu"
			android:layout_gravity="bottom"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="菜单"/>
	</LinearLayout>

</LinearLayout>